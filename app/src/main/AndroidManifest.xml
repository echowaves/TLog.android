<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.echowaves.tlog">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    // optional but highly recommended
    <application
        android:name=".TLApplicationContextProvider"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="LOCALYTICS_APP_KEY"
            android:value="3cedf51f841eedbbd254fbb-443b51e0-eb9c-11e5-4245-00adad38bc8d" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".controller.user.SignIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="tlog">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "tlog://employeesâ€ -->
                <data
                    android:host="employee"
                    android:scheme="tlog" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.user.SignUp" />
        <activity android:name=".controller.user.Menu" />
        <activity android:name=".controller.user.employee.Employees" />
        <activity android:name=".controller.user.report.YearPicker" />
        <activity android:name=".controller.user.employee.EmployeeCreate" />
        <activity android:name=".controller.user.employee.EmployeeDetails" />
        <activity android:name=".controller.user.employee.EmployeeActionCodes" />
        <activity android:name=".controller.employee.Checkins" />
        <activity android:name=".controller.employee.PickActionCode" />
        <activity android:name=".controller.employee.CheckinDetails" />
        <activity android:name=".controller.user.report.MonthPicker"></activity>
        <activity android:name=".controller.user.report.ActionCodesReport"></activity>
        <activity android:name=".controller.user.report.EmployeesReport"></activity>
    </application>

</manifest>