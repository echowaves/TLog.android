<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.echowaves.tlog">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    // optional but highly recommended
    <application
        android:name=".TLApplicationContextProvider"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="LOCALYTICS_APP_KEY"
            android:value="3cedf51f841eedbbd254fbb-443b51e0-eb9c-11e5-4245-00adad38bc8d" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.echowaves.tlog.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>


        <activity android:name=".controller.user.SignIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="tlog">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "tlog://employees” -->
                <data
                    android:host="employee"
                    android:scheme="tlog" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.user.SignUp"
            android:noHistory="true"/>
        <activity android:name=".controller.user.Menu" />
        <activity android:name=".controller.user.employee.Employees" />
        <activity android:name=".controller.user.report.YearPicker" />
        <activity android:name=".controller.user.employee.EmployeeCreate"
            android:noHistory="true"/>
        <activity android:name=".controller.user.employee.EmployeeDetails" />
        <activity android:name=".controller.user.employee.EmployeeActionCodes" />
        <activity android:name=".controller.user.employee.PickSubcontractor"></activity>
        <activity android:name=".controller.employee.Checkins" />
        <activity android:name=".controller.employee.PickActionCode" />
        <activity android:name=".controller.employee.CheckinDetails" />
        <activity android:name=".controller.user.report.MonthPicker" />
        <activity android:name=".controller.user.report.ActionCodesReport" />
        <activity android:name=".controller.user.report.EmployeesReport" />
        <activity android:name=".controller.user.OutdatedVersion"></activity>
        <activity android:name=".controller.user.subcontractor.Subcontractors"></activity>
        <activity android:name=".controller.user.subcontractor.SubcontractorDetails"></activity>
        <activity android:name=".controller.user.subcontractor.SubcontractorCreate"
            android:noHistory="true"></activity>
    </application>
</manifest>