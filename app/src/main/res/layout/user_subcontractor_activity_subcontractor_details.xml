<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TLUserColor"
    android:orientation="vertical"
    tools:context="com.echowaves.tlog.controller.user.subcontractor.SubcontractorDetails">

    <!-- Action Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/abs__action_bar_default_height"
        android:layout_marginBottom="10dip"
        android:background="@color/TLNavColor">

        <Button
            android:id="@+id/user_subcontractor_activity_subcontractor_details_backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="5dip"
            android:text="&lt; back"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/user_subcontractor_activity_subcontractor_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:minWidth="100dp"
            android:padding="5dp"
            android:text="subcontractor details"
            android:textColor="@color/TLTextColor"
            android:textSize="20dp" />

        <com.joanzapata.iconify.widget.IconButton
            android:id="@+id/user_subcontractor_activity_subcontractor_details_deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="0dip"
            android:text="{fa-trash-o}"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="35dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/user_subcontractor_activity_subcontractor_details_nameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="name"
        android:padding="5dip"
        android:textSize="30dp" />


    <Button
        android:id="@+id/user_subcontractor_activity_subcontractor_details_saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_green_button"
        android:color="@android:color/holo_blue_bright"
        android:padding="5dip"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/user_subcontractor_activity_subcontractor_details_coiExpiresAtEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edittext"
        android:focusable="false"
        android:hint="COI expiration date"
        android:padding="5dip"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/user_subcontractor_activity_subcontractor_details_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <com.joanzapata.iconify.widget.IconButton
            android:id="@+id/user_subcontractor_activity_subcontractor_details_downloadButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_grey_button"
            android:text="{fa-download}"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <com.joanzapata.iconify.widget.IconButton
            android:id="@+id/user_subcontractor_activity_subcontractor_details_photoButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_grey_button"
            android:text="{fa-camera}"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

    </RelativeLayout>
</LinearLayout>
