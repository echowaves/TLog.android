<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/employee_item_checkin_checkedInAtLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="checkedInAt"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/employee_item_checkin_actionCodeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action Code"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/employee_item_checkin_durationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dip"
            android:text="duration"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>